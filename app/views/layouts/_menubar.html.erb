<div class="M_Menubar">

  <%= image_tag("A_Logo_Header.svg", alt: "Картинка логотипа") %>

  <div class="M_LinksHeader">
    <%= link_to 'Главная', root_path %>
    <%= link_to 'Темы', themes_path %>
    <%= link_to 'Блог', posts_path %>
  </div>




  <div class="M_LoginSets">
    <% if current_user %>

      <%= link_to "Выйти", destroy_user_session_path, data: { "turbo-method": :delete } %>


      <div class="A_AccentMenu">
        <%= link_to current_user.email, edit_user_registration_path %>
      </div>      

      <%= link_to "Профиль", profile_path(current_user) %>

    <% else %>

      <%= link_to "Зарегистрироваться", new_user_registration_path %>

      <div class="A_AccentMenu">
        <%= link_to "Войти", new_user_session_path %>
      </div>


    <% end %>
  </div>


</div>